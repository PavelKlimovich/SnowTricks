{% extends 'layouts/base.html.twig' %}

{% block title %}
SnowTricks
{% endblock %}

{% block body %}

    <div class="container">
        <nav class="navbar navbar-expand-lg mt-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">Snow|Tricks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav mb-lg-0 justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tricks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Sign up</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </div>

    <header class="mb-auto">
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center header-image">
            <div class="col-md-5 p-lg-5 mx-auto my-5 header-block">
                <h1 class="display-1 fw-normal mt-3 text-primary">SNOWTRICKS</h1>
                <p class="lead fw-normal text-white">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
            </div>
            <div class="product-device shadow-sm d-none d-md-block"></div>
            <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
        </div>
    </header>

	<main class="container">
		<div class="container px-4 py-5" id="custom-cards">
      <div class="row row-cols-1 row-cols-lg-5 align-items-stretch g-4 py-5">
      
      {% for trick in tricks %}
        <div class="col">
          <div class="card card-cover overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('https://images.unsplash.com/photo-1512590769501-5c3996952a68?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');">
            <div class="d-flex justify-content-end flex-column p-2 pb-3 text-white text-shadow-1"></div>
          </div>
              <ul class="d-flex list-unstyled mt-auto">
                <li class="me-auto">
                  <h5 class="p-2 pt-3 lh-1 fw-bold"><a href="{{ path('show',{'id':trick.id}) }}" class="text-decoration-none text-secondary" >{{ trick.name }}</a></h5>
                </li>
                <li class="d-flex align-items-center mt-1">
                  <small class="p-3 icon"><a href="#" ><i class="fa-solid fa-pencil"></i></a></small>
                  <small class="p-1 icon"><a href="#" class="link"><i class="fa-solid fa-trash"></i></a></small>
                </li>
              </ul>
        </div>
      {% endfor %}
      
      </div>  
    </div>	
	</main>

    <footer class="container my-5 pt-5 text-muted text-right text-small">
        <p class="mb-1">Copyright Â© 2021 SnowTricks</p>
    </footer>

{% endblock %}