{% extends 'layouts/base.html.twig' %}

{% block title %}
Register
{% endblock %}

{% block body %}
  <div class="container">
        <nav class="navbar navbar-expand-lg mt-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">SnowTricks</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav mb-lg-0 justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tricks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Sign in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_register') }}">Sign up</a>
                    </li>
                </ul>
                </div>
            </div>
        </nav>
    </div>
    <main class="container">
        <div class="row mt-5">
            <div class="col-12 text-center">
                <h1>Register</h1>
            </div>
            <div class="col-12 text-center d-flex justify-content-center">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                {{ form_start(registrationForm) }}
                    <div class="form-signin mt-5">
                        {{ form_row(registrationForm.username) }}
                        {{ form_row(registrationForm.email) }}
                        {{ form_row(registrationForm.plainPassword, { label: 'Password' }) }}
                        {{ form_row(registrationForm.agreeTerms) }}
                        </div>
                        <button type="submit" class="btn btn-lg btn-primary btn-block mt-4">Create an account</button>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
	</main>

    <footer class="container my-5 pt-5 text-muted text-right text-small">
        <p class="mb-1">Copyright Â© 2021 SnowTricks</p>
    </footer>
   
{% endblock %}
